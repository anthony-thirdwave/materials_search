.container
  .row
    = simple_form_for @company do |f|
      - if @company.errors.any?
        #error_explanation
          %h2
            = "#{pluralize(@company.errors.count, "error")} prohibited this company from being saved:"
          %ul
            - @company.errors.full_messages.each do |msg|
              %li
                = msg
      .row
        .col-md-12
          .form-group
            = f.input :name, class: "form-control"
        .col-md-12
          .form-group
            = f.input :address, class: "form-control"
        .col-md-12
          .form-group
            = f.input :city, class: "form-control"
        .col-md-12
          .form-group
            = f.input :state, class: "form-control"
        .col-md-12
          .form-group
            = f.input :zip, class: "form-control"
        .col-md-12
          .form-group
            = f.input :country, class: "form-control"
      .form-group
        = f.button :submit
